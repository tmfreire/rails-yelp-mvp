<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Reviews:</strong>
  <p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %></p>
  <ul>
    <% @reviews.each do |review| %>
      <li>(<%= review.rating %>) <%= review.content %>
    <% end %>
  </ul>
</p>

<%= link_to 'Back', restaurants_path %>

